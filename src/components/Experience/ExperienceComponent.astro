---
interface Props {
  businessName: string;
  link: string;
  date: string;
  place: string;
  description: string;
  side: string;
}

const { businessName, link, date, place, description, side } = Astro.props;

---

<li>
  <div class="timeline-middle">
    <!-- <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="h-5 w-5"
    >
      <path
        fill-rule="evenodd"
