---
interface Props {
  businessName: string;
  link: string;
  date: string;
  place: string;
  description: string;
}

const { businessName, link, date, place, description } = Astro.props;
---

<div class="d-flex flex-row">
  <div id="experience" class="d-flex flex-row align-items-baseline gap-2">
    <div class="d-flex flex-column align-items-center">
      <i class="bi bi-briefcase-fill" style="font-size: 25px;"></i>
    </div>
    <div class="d-flex flex-column">
      <h5 id="businessName">
        <a
          class="d-flex flex-row align-items-center gap-2"
          href={link}
          target="_blank"
          >{businessName}
          <i class="bi bi-box-arrow-up-right" style="font-size: small;"></i></a
        >
      </h5>
      <label>{date}</label>
      <label>{place}</label>
      <p>{description}</p>
    </div>
  </div>
</div>

<style>
  #experience {
    max-width: 70%;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  #businessName:hover {
    text-decoration: underline;
  }

  @media only screen and (max-width: 600px) {
    #experience {
      max-width: 100%;
    }
  }
</style>
