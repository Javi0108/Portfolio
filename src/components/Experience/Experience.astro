---
import ExperienceComponent from "./ExperienceComponent.astro";
---

<section>
  <h3 class="title">Experience</h3>
  <div class="content">
    <ExperienceComponent
      businessName="Aqua E-Solutions"
      link="https://www.aquaesolutions.com/"
      date="Jun 2024 - Present"
      place="Santa Cruz de Tenerife"
      description="Web developing with iRainDrops and Software developing with Aqua eBs."
    />
    <ExperienceComponent
      businessName="E-Turia"
      link="https://eturia.co/es/"
      date="Mar 2024 - May 2024"
      place="Santa Cruz de Tenerife"
      description="Participated in the development of SAP Commerce Cloud instalation tutorial on Windows."
    />
    <ExperienceComponent
      businessName="I-Top"
      link="https://www.itop.es/"
      date="Mar 2022 - May 2022"
      place="Santa Cruz de Tenerife"
      description="Participated in the migration of an app from Titanium to ReactJS."
    />
  </div>
</section>
<div id="projects"></div>

<style>
  section {
    margin-top: 3rem;
  }

  .content {
    padding-left: 25%;
  }

  @media only screen and (max-width: 600px) {
    .content {
      padding-left: 5%;
      padding-right: 5%;
      justify-content: start;
    }
  }
</style>
