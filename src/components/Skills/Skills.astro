---
import Icons from "./SkillsIcons.astro";
---

<section>
  <h3 class="title">Skills</h3>
  <div class="content">
    <Icons />
  </div>
</section>

<style>
  section {
    margin-top: 3rem;
  }

  .content {
    display: flex;
    flex-direction: row;
    gap: 20px;
    padding-left: 25%;
    z-index: 1000;
  }

  @media only screen and (max-width: 600px) {
    .content {
      padding-left: 5%;
      padding-right: 5%;

      justify-content: start;
    }
  }
</style>
