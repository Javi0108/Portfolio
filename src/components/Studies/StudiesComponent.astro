---
interface Props {
  title: string;
  finishDate: string;
  school: string;
  description: string;
}

const { title, finishDate, school, description } = Astro.props;
---

<div class="content d-flex flex-row align-items-baseline gap-2">
  <div class="d-flex flex-column align-items-center">
    <i class="bi bi-mortarboard-fill" style="font-size: 25px"></i>
  </div>
  <div class="d-flex flex-column">
    <h5>{title}</h5>
    <label>{finishDate}</label>
    <label>{school}</label>
    <p>{description}</p>
  </div>
</div>
