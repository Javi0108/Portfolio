---
import Character3D from "./Character3D.astro";
import Background3D from "./Background3D.astro";
---

<section id="background" class="d-flex flex-row justify-content-center">
  <div class="content">
    <div id="cover" class="content-header d-flex flex-row">
      <div>
        <div class="titles">
          <span
            ><span class="hello">hello</span>, I'm <strong>Javier</strong
            >,</span
          >
          <span style="text-align: center;"
            ><strong>Fullstack</strong> developer</span
          >
        </div>
        <div class="d-flex flex-row justify-content-center gap-4 fs-3 pt-2" id="icons">
          <a target="_blank" href="https://github.com/Javi0108"
            ><i class="bi bi-github"></i></a
          >
          <a target="_blank" href="mailto:gardojavi@gmail.com"
            ><i class="bi bi-envelope-fill"></i></a
          >
          <a target="_blank" href="https://www.linkedin.com/in/javierrgd/"
            ><i class="bi bi-linkedin"></i></a
          >
          <a
            target="_blank"
            href="https://drive.google.com/file/d/1e5AMf2BqTUXGYR4E8E4X7J3RCab5Jolr/view?usp=drive_link"
            ><i class="bi bi-file-earmark-person-fill"></i></a
          >
        </div>
      </div>

      <!-- <img
        id="self-image"
        src="self-image.jpg"
        alt=""
        class="d-none d-md-block rounded-circle mx-5"
        width="350px"
      /> -->
      <div id="object" class="d-none d-md-block">
        <Character3D />
      </div>
    </div>

    <div class="content-footer d-flex flex-row">
      <span id="about-me">Read more</span>
      <!-- El id del span es para los links -->
      <i class="bi bi-arrow-down"></i>
    </div>
  </div>
</section>

<style>
  section {
    height: 100vh;
  }

  .hello {
    font-family: "Borel", cursive;
  }

  .content {
    height: 100%;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 0.2fr;
    z-index: 1000;
  }

  .content-header {
    margin-top: 4rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }

  .titles {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    font-size: xx-large;
    align-items: center;
    justify-content: center;
  }

  strong {
    color: #609fff;
  }

  .content-footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  #icons a {
    color: inherit;
    transition: all 0.3s ease;
  }

  #icons a:hover {
    color: #609fff;
  }

  #object {
    margin-left: 10rem;
    width: 450px;
    height: 450px;
    border-radius: 50%;
  }

  .bi-arrow-down {
    position: relative;
    animation: smoothbouncearrow 0.5s infinite alternate;
  }

  @keyframes smoothbouncearrow {
    from {
      transform: translate3d(0, -3px, 0);
    }
    to {
      transform: translate3d(0, 3px, 0);
    }
  }

  @media only screen and (max-width: 600px) {
    section {
      height: 90vh;
    }
    .content-header {
      margin-top: 0rem;
    }

    .content-footer {
      padding-top: 0rem;
      align-items: start;
    }
  }
</style>
