---
import angular from "../assets/icons/angular.svg";
import bootstrap from "../assets/icons/bootstrap.svg";
import css from "../assets/icons/css.svg";
import django from "../assets/icons/django.svg";
import html from "../assets/icons/html.svg";
import ionic from "../assets/icons/ionic.svg";
import java from "../assets/icons/java.svg";
import javascript from "../assets/icons/javascript.svg";
import mysql from "../assets/icons/mysql.svg";
import php from "../assets/icons/php.svg";
import python from "../assets/icons/python.svg";
import react from "../assets/icons/react.svg";
import sqlite from "../assets/icons/sqlite.svg";
import typescript from "../assets/icons/typescript.svg";
---

<div>
  <h5>Front-End</h5>
  <div class="d-flex flex-row flex-wrap gap-2" style="margin-bottom: 2rem;">
    <img src={html.src} alt="imgn del logo de html" title="HTML" style={"width: 45px"} />
    <img src={css.src} alt="imgn del logo de css" title="CSS" style={"width: 45px"} />
    <img
      src={javascript.src}
      alt="imgn del logo de javascript"
      title="JavaScript"
      style={"width: 45px"}
    />
    <img
      src={typescript.src}
      alt="imgn del logo de typescript"
      title="TypeScript"
      style={"width: 45px"}
    />
    <img
      src={bootstrap.src}
      alt="imgn del logo de bootstrap"
      title="Bootstrap"
      style={"width: 45px"}
    />
    <img src={ionic.src} alt="imgn del logo de ionic" title="Ionic" style={"width: 45px"} />
    <img
      src={angular.src}
      alt="imgn del logo de angular"
      title="Angular"
      style={"width: 45px"}
    />
    <img src={react.src} alt="imgn del logo de react" title="React" style={"width: 45px"} />
  </div>
  <h5>Back-End</h5>
  <div class="d-flex flex-row flex-wrap gap-2">
    <img src={java.src} alt="imgn del logo de java" title="Java" style={"width: 45px"} />
    <img src={php.src} alt="imgn del logo de php" title="PHP" style={"width: 45px"} />
    <img src={python.src} alt="imgn del logo de python" title="Python" style={"width: 45px"} />
    <img src={django.src} alt="imgn del logo de django" title="Django" style={"width: 45px"} />
    <img src={mysql.src} alt="imgn del logo de mysql" title="MySQL" style={"width: 70px"} />
    <img src={sqlite.src} alt="imgn del logo de sqlite" title="SQLite" style={"width: 70px"} />
  </div>
</div>

<style>
  img {
    padding: 0px;
    filter: grayscale(100%);
    transition: filter ease 0.3s;
  }

  img:hover {
    transform: filter ease;
    filter: grayscale(0%);
  }
</style>