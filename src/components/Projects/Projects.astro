---
import ProjectsComponent from "./ProjectsComponent.astro";
---

<section>
  <h3 class="title">Projects</h3>
  <div class="content">
    <ProjectsComponent
      title="QuickCart"
      description="E-Commerce creator (TFC)"
      link="https://github.com/Javi0108/QuickCart"
      img="/projects_imgs/quickcart_img.png"
      tech={["angular", "typescript", "django", "python"]}
    />
    <ProjectsComponent
      title="DoAll"
      description="ToDo app with an API REST"
      link="https://github.com/Javi0108/todo-app"
      img="/projects_imgs/ToDoApp_img.png"
      tech={["react", "javascript", "django", "python"]}
    />
    <ProjectsComponent
      title="Formula 1"
      description="Formula 1 app using an external API REST"
      link="https://github.com/Javi0108/formula1-react"
      img="/projects_imgs/formula1_img.png"
      tech={["react", "typescript"]}
    />
    <ProjectsComponent
      title="Galaxy collision"
      description="Simulation of galaxy collision using ThreeJS"
      link="https://github.com/Javi0108/galaxy-collision"
      img="/projects_imgs/galaxyCollision_img.png"
      tech={["vite", "javascript", "threejs"]}
    />
    <!-- <ProjectsComponent
      title="Personalized portfolio (In progress)"
      description="Interactive portfolio website built with Astro and ThreeJS"
      link=""
      img=""
    />
     -->
  </div>
</section>

<style>
  section {
    margin-top: 3rem;
  }

  .content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
    padding-left: 25%;
  }

  @media only screen and (max-width: 600px) {
    .content {
      padding-left: 5%;
      padding-right: 5%;

      justify-content: start;
    }
  }
</style>
